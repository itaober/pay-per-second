{
  "name": "second-salary",
  "displayName": "Selected Line Numbers",
  "description": "Shows the number of selected lines in the status bar",
  "version": "0.0.1",
  "publisher": "itaober",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/itaober/second-salary"
  },
  "bugs": {
    "url": "https://github.com/itaober/second-salary/issues"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -watch -p ./"
  },
  "contributes": {
    "commands": [
      {
        "command": "itaober.showSecondSalary",
        "title": "Show your second salary!"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Second Salary Settings",
      "properties": {
        "secondSalary.1_salary": {
          "type": "number",
          "default": 0,
          "description": "The monthly/weekly/daily salary, depending on salaryType."
        },
        "secondSalary.2_salaryType": {
          "type": "string",
          "enum": [
            "Monthly",
            "Weekly",
            "Daily"
          ],
          "default": "Monthly",
          "description": "The type of salary."
        },
        "secondSalary.3_salarySymbol": {
          "type": "string",
          "default": "ðŸ’°",
          "description": "The prefix symbol for salary display"
        },
        "secondSalary.4_workDays": {
          "type": "array",
          "default": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday"
          ],
          "description": "The work days of the week",
          "items": {
            "type": "string",
            "enum": [
              "Sunday",
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday",
              "Saturday"
            ]
          }
        },
        "secondSalary.5_startTime": {
          "type": "string",
          "default": "09:00",
          "description": "Start time of the work day"
        },
        "secondSalary.6_endTime": {
          "type": "string",
          "default": "18:00",
          "description": "End time of the work day"
        }
      }
    }
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.26.0",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "dayjs": "^1.11.11"
  }
}
